<ul class="chat-box chatContainerScroll">
     <div class="lala">
         {% for message in messages %}
         {% if message.author == app.user.lastname ~' '~ app.user.firstname %}
         <li class="chat-left">
             <div class="chat-avatar">
                 {% if message.avatar != '' %}
                 <img src="{{ vich_uploader_asset(message.author, 'avatarFile')  }}" alt="{{ message.author }}" />
                 {% else %}
                 <img src="{{ asset('assets/images/nopic.png')  }}" alt="{{ message.author }}" />
                 {% endif %}
                 <div class="chat-name">{{ message.author }}</div>
             </div>
             <div class="chat-text">{{ message.content }}</div>
             <div class="chat-hour">{{ message.createdAt}} <span class="fa fa-check-circle"></span></div>
         </li>
         {% else %}
         <li class="chat-right">
             <div class="chat-hour">{{ message.createdAt }} <span class="fa fa-check-circle"></span></div>
             <div class="chat-text">{{ message.content }}</div>
             <div class="chat-avatar">
                 {% if message.avatar != '' %}
                 <img src="{{ vich_uploader_asset(message.author, 'avatarFile')  }}" alt="{{ message.author }}" />
                 {% else %}
                 <img src="{{ asset('assets/images/nopic.png')  }}" alt="{{ message.author }}" />
                 {% endif %}
                 <div class="chat-name">{{ message.author }}</div>
             </div>
         </li>
         {% endif %}
         {% endfor %}
     </div>
 </ul>
